<header class="bg-light-bg-alt dark:bg-dark-bg-alt px-8 py-2 fixed top-0 left-0 right-0 z-10">
	<nav class="flex justify-between items-center">
		<div class="flex gap-2 items-center">
			<%= link_to 'Baddit', '/', class: "font-semibold hover:text-red-600" %>

			<div class="relative inline-block text-left" data-controller="dropdown">
				<div>
					<button type="button" data-action="click->dropdown#toggleMenu" class="inline-flex justify-center w-full rounded px-4 py-2 hover:bg-gray-200 dark:fill-white dark:hover:fill-black">
						<%= inline_svg_tag 'plus.svg', class: "w-3 h-3 " %>
					</button>
				</div>

				<div class="hidden absolute left-0 mt-2 rounded shadow-lg bg-light-bg-alt dark:bg-dark-bg-alt" tabindex="-1" data-dropdown-target="menu">
					<div class="flex flex-col gap-1 p-1 text-sm w-36" role="none">
						<%= link_to "New Post", new_post_path, class: "hover:bg-gray-200 dark:hover:bg-gray-500 px-1" %>
						<%= link_to "Create Community", new_community_path, class: "hover:bg-gray-200 dark:hover:bg-gray-500 px-1" %>
					</div>
				</div>
			</div>
		</div>

		<div class="flex gap-2 justify-center items-center">
			<% if current_user %>
				<%= button_to "Log out", destroy_user_session_path, method: :delete, class: "anchor-styling" %>
			<% else %>
				<%= link_to "Log in", new_user_session_path, class: "hover:text-red-800" %>
				<%= link_to "Sign up", new_user_registration_path, class: "hover:text-red-800" %>
			<% end %>
		</div>
	</nav>
</header>
