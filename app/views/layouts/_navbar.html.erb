<header class="bg-white px-8 py-2 fixed top-0 left-0 right-0 z-10">
	<nav class="flex justify-between items-center">
		<%= link_to 'Baddit', '/', class: "font-semibold hover:text-red-600" %>

		<div class="flex gap-2 justify-center items-center">
			<%= link_to new_post_path, 'aria-label': "Create new post", class: "flex justify-center items-center w-6 h-6 hover:bg-gray-200" do %>
				<%= inline_svg_tag 'plus.svg', class: "w-3 h-3 " %>
			<% end %>
			<%= link_to "Create Community", new_community_path, class: "anchor-styling" %>
			<% if current_user %>
				<%= button_to "Log out", destroy_user_session_path, method: :delete, class: "anchor-styling" %>
			<% else %>
				<%= link_to "Log in", new_user_session_path, class: "anchor-styling" %>
				<%= link_to "Sign up", new_user_registration_path, class: "anchor-styling" %>
			<% end %>

		</div>
	</nav>
</header>
