<%= form_with model: @comment, url: post_comments_path(@post) do |f| %>
	<%= f.text_area :body, minlength: 3, maxlength: 500, required: true, rows: 4, "aria-label": "body", placeholder: "New Comment...", class: "w-full bg-light-bg-alt dark:bg-dark-bg-alt" %>
	<%= f.button "Post Comment", class: "bg-blue-600 px-9 text-sm py-2 rounded-full text-white hover:brightness-110 transition" %>
<% end %>
