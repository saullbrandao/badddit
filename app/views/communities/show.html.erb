<%= provide(:title, @community.name) %>
<%= render 'header' %>

<% if @community.posts.any? %>
	<ul class="flex flex-col divide-y-2 divide-light-divide dark:divide-dark-divide mb-2">
		<% @community.posts.each do |post| %>
			<%= render 'posts/post', post: post %>
		<% end %>
	</ul>
<% else %>
	<p>No posts yet.</p>
<% end %>
