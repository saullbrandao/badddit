<%= provide(:title, @community.name) %>
<%= render 'header' %>

<% if @community.posts.any? %>
	<ul id="posts" class="flex flex-col divide-y-2 divide-light-divide dark:divide-dark-divide mb-2">
		<%= render @posts %>
	</ul>
	<div id="next_link" class="my-4 ">
		<%= render 'shared/load_button', url: community_paginate_path(@community.slug) + "?2&page=#{@pagy.next}" %>
	</div>
<% else %>
	<p>No posts yet.</p>
<% end %>
