<%= provide(:title, "Sign Up") %>

<div class="flex justify-center">

	<%= form_for resource, as: resource_name, url: registration_path(resource_name), html: {class: "flex flex-col justify-center gap-2 bg-light-bg-alt dark:bg-dark-bg-alt px-8 py-6 mt-10 rounded-md w-full md:w-1/3 xl:w-1/4"} do |f| %>
		<h2 class="font-bold self-center text-lg">Sign up</h2>
		<%= render "devise/shared/error_messages", resource: resource %>

		<div class="field">
			<%= f.label :email %><br />
			<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full bg-transparent" %>
		</div>

		<div class="field">
			<%= f.label :username %><br />
			<%= f.text_field :username, autocomplete: "username", class: "w-full bg-transparent" %>
		</div>

		<div class="field">
			<%= f.label :password %>
			<% if @minimum_password_length %>
				<em>(<%= @minimum_password_length %> characters minimum)</em>
			<% end %><br />
			<%= f.password_field :password, autocomplete: "new-password", class: "w-full bg-transparent" %>
		</div>

		<div class="field">
			<%= f.label :password_confirmation %><br />
			<%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full bg-transparent" %>
		</div>

		<div class="actions flex justify-evenly text-center">
			<%= f.submit "Sign up", class: "px-3 py-2 w-24 bg-blue-600 text-white py-2 mt-2 hover:brightness-110 hover:cursor-pointer" %>
			<%= render "devise/shared/links" %>
		</div>
	<% end %>

</div>
