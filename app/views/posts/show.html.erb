<%= render 'communities/header' %>
<section class="w-full flex flex-col justify-center items-center mt-8">
	<article class="flex flex-col justify-center gap-2 bg-white p-4 rounded-md w-full">
		<span class="text-gray-400 text-sm">Posted by u/user1 <%= time_ago_in_words(@post.created_at) %> ago</span>
		<h1 class="font-bold text-xl">
			<%= @post.title %>
		</h1>
		<p>
			<%= @post.body %>
		</p>
	</article>
</section>
